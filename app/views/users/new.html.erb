<h1 align="center">Sign up for E36 Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class='form-group'>
	<!-- <div class="col-xs-12"> -->
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<!-- <div class="col-sm-2 col-form-label"> -->
	  			<%= f.label :username %>
	  		</div>
	  		<div class="form-group">
	  			<!-- <div class="col-sm-10"> -->
	  			<%= f.text_field :username, class:"form-control ", placeholder: "Enter Username", autofocus: true %>
				<!-- </div> -->
			</div>
			<div class="form-group">
				<!-- <div class="col-sm-2 col-form-label"> -->
	  				<%= f.label :email %>
	  		</div>
	  		<div class="form-group">
	  			<!-- <div class="col-sm-10"> -->
	  				<%= f.email_field :email, class:"form-control", placeholder: "Enter Email", autofocus: true %>
	  			<!-- </div> -->
	  		</div>
	  		<div class="form-group">
	  			<!-- <div class="col-sm-10"> -->
	  				<%= f.label :password %>
	  			<!-- </div> -->
	  		</div>
	  		<div class="form-group">
	  			<!-- <div class="col-sm-10"> -->
	  				<%= f.password_field :password, class:"form-control", placeholder: "Enter Password", autofocus: true %>
	  			<!-- </div> -->
	  		</div>
	  		<div class="form-group">
	  			<!-- <div class="col-sm-offset col-sm-10"> -->
					<%= f.submit "Sign Up", class: 'btn btn-primary' %>
			</div>
			<!-- </div> -->
		<% end %>
	 	<div class="col-xs-4">
			<%= link_to "Cancel request and return back to article listing", articles_path %>
		</div>
  	<!-- </div> -->
</div>